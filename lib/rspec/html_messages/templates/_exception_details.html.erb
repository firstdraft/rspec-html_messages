<div class="mt-4">
  <h4 class="h6 mb-3">
    Exception: <span class="text-danger"><%= exception_class %></span>
  </h4>
  
  <% if exception_backtrace.any? %>
    <div class="mt-3">
      <h5 class="h6 text-muted mb-2">Backtrace:</h5>
      <div class="terminal-output bg-dark p-3 rounded">
        <pre class="mb-0 text-light font-monospace small"><% formatted_backtrace.each do |line| %>  <%= html_escape(line) %>
<% end %></pre>
      </div>
    </div>
  <% end %>
</div>