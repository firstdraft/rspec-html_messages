<style>
  /* Diffy styles */
  <%= Diffy::CSS %>

  /* Override Diffy hover effect */
  .diff li:hover { background: inherit !important; }

  /* Fix for Unicode box-drawing characters */
  .terminal-output pre {
    line-height: 1;
  }

  /* Increase font size in diff output */
  .diff {
    font-size: 1rem;
  }
  .diff del, .diff ins, .diff span {
    font-size: inherit;
  }

  /* Additional styles for example rendering */
  .example {
    margin-bottom: 1.5rem;
    padding: 1rem;
    border-radius: 0.25rem;
  }

  .example.passed {
    background-color: #d4edda;
    border: 1px solid #c3e6cb;
  }

  .example.failed {
    background-color: #f8d7da;
    border: 1px solid #f5c6cb;
  }

  .status-icon {
    font-weight: bold;
    font-size: 1.2rem;
  }

  .example.passed .status-icon {
    color: #155724;
  }

  .example.failed .status-icon {
    color: #721c24;
  }
</style>