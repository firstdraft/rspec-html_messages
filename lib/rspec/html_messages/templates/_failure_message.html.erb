<div class="mt-4">
  <h4 class="h6 mb-3">
    Failure Message
    <% if exception_class && !error_before_assertion? %>
      <small class="text-muted">(<%= exception_class %>)</small>
    <% end %>
  </h4>
  <div class="terminal-output bg-dark p-3 rounded">
    <pre class="mb-0 failure-message text-light font-monospace overflow-auto"><%= html_escape(failure_message) %></pre>
  </div>
</div>