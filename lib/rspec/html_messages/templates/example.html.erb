<div class="example <%= status_class %>">
  <div class="example-header d-flex justify-content-between align-items-start mb-3">
    <div>
      <div class="d-flex align-items-center">
        <span class="status-icon me-2">
          <%= status == 'passed' ? '✓' : '✗' %>
        </span>
        <h5 class="mb-0"><%= description %></h5>
      </div>
      <small class="text-muted"><%= file_path %>:<%= line_number %></small>
    </div>
  </div>

  <% if options[:debug] %>
    <%= render_partial('debug_header') %>
  <% end %>

  <div class="example-body">
    <% if show_diff? %>
      <%= render_partial('diff') %>
    <% elsif has_actual? %>
      <%= render_partial('actual') %>
    <% end %>

    <% if failure_message.present? %>
      <%= render_partial('failure_message') %>
    <% end %>
  </div>

  <% if options[:debug] %>
    <%= render_partial('raw_json') %>
  <% end %>
</div>