<div class="card-body">
  <div class="d-flex align-items-center flex-wrap gap-2 mb-3">
    <span class="badge <%= status == 'passed' ? 'bg-success' : 'bg-danger' %>"><%= status.upcase %></span>
    <span class="badge bg-secondary"><%= matcher_type %></span>
    <span class="badge bg-info">Diffable: <%= effective_diffable? %></span>
    <span class="badge bg-info">Negated: <%= negated? %></span>
  </div>
  <div class="text-muted small">
    <div><strong>Matcher:</strong> <code><%= html_escape(matcher_name) %></code></div>
  </div>
</div>
